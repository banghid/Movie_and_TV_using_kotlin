<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        tools:context=".view.activity.FavDetailActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img_detail_fav"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_title_detail_fav"
                android:contentDescription="foto_list_item" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_detail_fav"
                android:id="@+id/tv_title_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_title_detail_fav"
                android:text="@string/detail_title"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingEnd="@dimen/appbar_padding_top" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title_detail_fav"
                app:layout_constraintTop_toTopOf="@id/tv_title_detail"
                app:layout_constraintBottom_toTopOf="@id/tv_rating_detail_fav"
                app:layout_constraintLeft_toLeftOf="@id/tv_rating_detail_fav"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingEnd="@dimen/appbar_padding_top" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rating_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_detail_fav"
                app:layout_constraintRight_toLeftOf="@id/tv_rating_detail_fav"
                android:text="@string/detail_rating"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingEnd="@dimen/appbar_padding_top" />

        <TextView
                android:layout_width="344dp"
                android:layout_height="28dp"
                android:id="@+id/tv_rating_detail_fav"
                app:layout_constraintTop_toTopOf="@id/tv_rating_detail"
                app:layout_constraintLeft_toRightOf="@id/tv_rating_detail"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_title_detail_fav"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingEnd="@dimen/appbar_padding_top" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_overview_detail"
                app:layout_constraintTop_toBottomOf="@id/tv_rating_detail_fav"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_overview_detail_fav"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingEnd="@dimen/appbar_padding_top"
                android:text="@string/detail_overview" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_overview_detail_fav"
                app:layout_constraintLeft_toRightOf="@id/tv_overview_detail"
                app:layout_constraintLeft_toLeftOf="@id/tv_rating_detail_fav"
                app:layout_constraintTop_toTopOf="@id/tv_overview_detail"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingEnd="@dimen/appbar_padding_top" />
    </android.support.constraint.ConstraintLayout>

</ScrollView>