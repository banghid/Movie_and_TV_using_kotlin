<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
        tools:context=".view.tvshow_detail.TvShowDetailActivity">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/img_detail_tvshow"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_title_detail_tvshow"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/img_detail_tvshow"
                android:id="@+id/tv_title_detail_dummy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_title_detail_tvshow"
                android:text="@string/detail_title"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingRight="@dimen/appbar_padding_top"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title_detail_tvshow"
                app:layout_constraintTop_toTopOf="@id/tv_title_detail_dummy"
                app:layout_constraintBottom_toTopOf="@id/tv_rating_detail_tvshow"
                app:layout_constraintLeft_toLeftOf="@id/tv_rating_detail_tvshow"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingRight="@dimen/appbar_padding_top"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rating_detail_dummy"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_detail_tvshow"
                app:layout_constraintRight_toLeftOf="@id/tv_rating_detail_tvshow"
                android:text="@string/detail_rating"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingRight="@dimen/appbar_padding_top"/>
        <TextView
                android:layout_width="344dp"
                android:layout_height="28dp"
                android:id="@+id/tv_rating_detail_tvshow"
                app:layout_constraintTop_toTopOf="@id/tv_rating_detail_dummy"
                app:layout_constraintLeft_toRightOf="@id/tv_rating_detail_dummy"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/tv_title_detail_tvshow"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingRight="@dimen/appbar_padding_top"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_overview_detail_dummy"
                app:layout_constraintTop_toBottomOf="@id/tv_rating_detail_tvshow"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_overview_detail_tvshow"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/appbar_padding_top"
                android:text="@string/detail_overview"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_overview_detail_tvshow"
                app:layout_constraintLeft_toRightOf="@id/tv_overview_detail_dummy"
                app:layout_constraintLeft_toLeftOf="@id/tv_rating_detail_tvshow"
                app:layout_constraintTop_toTopOf="@id/tv_overview_detail_dummy"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingTop="@dimen/appbar_padding_top"
                android:paddingRight="@dimen/appbar_padding_top"/>
    </android.support.constraint.ConstraintLayout>


</ScrollView>